<?xml version="1.0" encoding="utf-8"?>
<manifest package="example.com.xyzreader"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.example.xyzreader.XyzApp"
        android:supportsRtl="true"
        android:theme="@style/XyzTheme">
        <activity
            android:name="com.example.xyzreader.ui.MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.xyzreader.ui.ViewPagerActivity"/>
    </application>

</manifest>
